<Window x:Class="ChqPrint.VentanaPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:s="clr-namespace:ChqPrint"
        Title="Impresion de Cheques" Height="320" Width="640" Background="PaleGoldenrod" Closed="Window_Closed">
    <Grid Name="grid1">
        <Grid.RowDefinitions>
            <RowDefinition Height="73*" />
            <RowDefinition Height="111*" />
            <RowDefinition Height="58*" />
        </Grid.RowDefinitions>
        <ToolBar Height="64" Name="toolBar1" Background="#5A1B1B1D" Margin="12,12,12,0" VerticalAlignment="Top" HorizontalContentAlignment="Stretch">
            <Button Content="Diseñar" Name="buttonDesign" FontStretch="Normal" FontWeight="Bold" FontSize="16" Click="design_Click" HorizontalAlignment="Stretch" Width="128" />
            <Separator></Separator>
            <Button Content="Imprimir" Name="buttonPrint" FontStretch="Normal" FontWeight="Bold" FontSize="16" HorizontalAlignment="Stretch" Width="128" Click="buttonPrint_Click" />
        </ToolBar>
       
    </Grid>
</Window>
